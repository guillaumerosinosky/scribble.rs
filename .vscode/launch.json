    "version": "0.2.0",
    "configurations": [
        {
            "name": "Load test (owner)",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/tools/loadtest/main.go",
            "env": {
                "USER_TYPE": "owner",
                "OTEL":"true",
                "OTEL_HOST": "localhost:4317",
                "SERVICE_NAME": "owner"
            }
        },
        {
            "name": "Load test (player)",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/tools/loadtest/main.go",
            "env": {
                "USER_TYPE": "player",
                "OTEL":"true",
                "OTEL_HOST": "localhost:4317",        
                "SERVICE_NAME": "player"
            }

        },        
        {
            "name": "Start server (persist basic)",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/main.go",
            "env": {
                "DB_HOST":"localhost",
                "OTEL":"true",
                "OTEL_HOST": "localhost:4317",
                "PERSISTENCE_MODE": "BASIC",
            }
        },        
        {
            "name": "Start server (persist basic + pubsub)",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/main.go",
            "env": {
                "DB_HOST":"localhost",
                "OTEL":"true",
                "OTEL_HOST": "localhost:4317",
                "PERSISTENCE_MODE": "BASIC",
                "PUBSUB": "true",
            }
        }
    ]
}